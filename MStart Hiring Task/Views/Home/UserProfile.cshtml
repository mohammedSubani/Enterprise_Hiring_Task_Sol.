<body>

    <div class="text-center">
        <h1 class="display-4">User page</h1>
    </div>

    <form class="p-a-1">
        <div class="text-center">

            <button class="btn btn-primary" asp-action="Deals" method="post" type="submit" style="border:solid;border-color:white;">
                View Deals
            </button>

            <button class="btn btn-primary" asp-action="MyClaimedDeals" method="post" type="submit" style="border:solid;border-color:white;">
                View My Claimed Deals
            </button>

            <button class="btn btn-primary" asp-action="ClaimDeal" method="post" type="submit" style="border:solid;border-color:white;">
                Claim a deal
            </button>


        </div>
    </form>


    <form method="post" enctype="multipart/form-data" asp-action="Upload">
        <div class="form-group">
            <label for="file">Select image to upload:</label>
            <input type="file" name="file" id="file" class="form-control-file">
        </div>
        <button type="submit" class="btn btn-primary">Upload</button>
    </form>


    @ViewBag.UploadStatus


</body>