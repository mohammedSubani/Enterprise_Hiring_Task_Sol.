<form asp-action="AddDeal" method="post" class="align-items-center">

    <div class="form-group">
        <label class="align-items-center">Deal Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter deals name">
    </div>

    <div class="form-group">
        <label class="align-items-center">Description</label>
        <input type="text" class="form-control" id="descr" name="descr" placeholder="Enter deals description">
    </div>

    <div class="form-group">
        <label class="align-items-center">Amount</label>
        <input type="number" class="form-control" id="amount" name="amount" placeholder="Enter deals amount">
    </div>

    <div class="form-group">
        <label class="align-items-center">Currency</label>
        <input type="text" class="form-control" id="currency" name="currency" placeholder="Enter currency">
    </div>

    <label class="align-items-center">Status</label>
    <select name="status" id="status">
        <option value="Active">Active</option>
        <option value="Inactive">Inactive</option>
        <option value="Deleted">Deleted</option>
        <option value="Expired">Expired</option>
    </select>
    <br><br>

    <br>

    <div class="align-items-center">
        <button type="submit" class="btn btn-primary">Add Deal</button>
    </div>

</form>


<p><strong><span style="color: #ff0000;">@ViewBag.DealAddResponse</span></strong></p>